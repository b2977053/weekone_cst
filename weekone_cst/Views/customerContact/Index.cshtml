@model IEnumerable<weekone_cst.Models.客戶聯絡人>

@{
    ViewBag.Title = "Index";
}

<script>
    function setOrderBy(arg) {
        var e = $("#orderby");
        if (!e.val().match(arg)) {
            e.val(arg);
        } else if (e.val().match('desc')) {
            e.val(e.val().replace('desc', ''));
        } else {
            e.val(arg + 'desc');
        }
        FormList.submit();
    }
</script>
<h2>Index</h2>
@using (Html.BeginForm("Index", "customerContact", FormMethod.Post, new { @name = "FormList", @id = "FormList" }))
{
    @Html.Hidden("orderby", "Id")
    @Html.DropDownList("qtype", null, htmlAttributes: new { @class = "form-control" })
    @Html.TextBox("qname", null, new { placeholder = "姓名" })
    <input type="submit" value="查詢" class="btn btn-default" />
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th onclick="setOrderBy('職稱')">
            @Html.DisplayNameFor(model => model.職稱)
        </th>
        <th onclick="setOrderBy('姓名')">
            @Html.DisplayNameFor(model => model.姓名)
        </th>
        <th onclick="setOrderBy('Email')">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th onclick="setOrderBy('手機')">
            @Html.DisplayNameFor(model => model.手機)
        </th>
        <th onclick="setOrderBy('電話')">
            @Html.DisplayNameFor(model => model.電話)
        </th>
        <th onclick="setOrderBy('客戶Id')">
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.職稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.手機)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
